{
  "name": "mini_webcam",
  "version": "1.0.0",
  "description": "mini web cam com electron",
  "main": "main.js",
  "scripts": {
    "lint:js": "eslint --fix --ext \".js\" .",
    "start-debug": "electron .  --trace-warnings > ./app-run.log  2>&1",
    "start": "electron .",
    "pack-win": "electron-builder --win",
    "pack-win-test": "electron-builder --dir --win",
    "pack-linux-test": "electron-builder --dir --linux",
    "pack-linux": "electron-builder --linux",
    "pack-mac": "electron-builder --mac",
    "publish": "electron-builder --win -p always",
    "publish-linux": "electron-builder --linux -p always",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder",
    "sass": "sass -w scss/main.scss css/main.min.css -s compressed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saulotarsobc/mini_webcam.git"
  },
  "keywords": [
    "electron",
    "electronjs",
    "webcam",
    "nodejs"
  ],
  "author": "Saulo Costa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/saulotarsobc/mini_webcam/issues"
  },
  "homepage": "https://github.com/saulotarsobc/mini_webcam#readme",
  "devDependencies": {
    "electron": "^21.0.1",
    "electron-builder": "^23.3.3",
    "sass": "^1.55.0"
  }
}
